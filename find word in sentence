#include <iostream>
#include <sstream>
using namespace std;

int main() {
    string sentence = "I love you I love Kerala";
    string findWord = "love";

    string word;
    stringstream ss(sentence);

    int index = 0;

    while (ss >> word) {      // split words
        if (word == findWord) {
            cout << index << " ";
        }
        index++;
    }

    return 0;
}
