#include <iostream>
#include <string>
using namespace std;

int main() {
    string s;
    cin >> s;

    int lastIndex[256];

    // Initialize all as -1
    for (int i = 0; i < 256; i++)
        lastIndex[i] = -1;

    int start = 0;
    int maxLength = 0;

    for (int i = 0; i < s.length(); i++) {

        // If character already seen inside window
        if (lastIndex[s[i]] >= start) {
            start = lastIndex[s[i]] + 1;
        }

        lastIndex[s[i]] = i;

        int currentLength = i - start + 1;

        if (currentLength > maxLength)
            maxLength = currentLength;
    }

    cout << maxLength;

    return 0;
}
